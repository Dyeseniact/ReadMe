<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_input_login">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_text_login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@color/primary1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="buttom_login">
        <item name="android:backgroundTint">@color/primary2</item>
        <item name="android:layout_margin">32dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="icon_arrow">
        <item name="android:layout_width">320dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/icon_arrow</item>
    </style>

    <style name="buttom_register">
        <item name="android:backgroundTint">@color/primary2</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">176dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="imageViewFooter">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/neutral3</item>
        <item name="android:src">@drawable/ic_foot_readbook</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">296dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart">18dp</item>

    </style>

    <style name="LogoTxV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">28sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TxvTitle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/Loret</item>
        <item name="android:textSize">22sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_input_register">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextView_home">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="Slider_home">
        <item name="android:layout_height">400dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingStart">56dp</item>
        <item name="android:paddingEnd">56dp</item>
    </style>
</resources>