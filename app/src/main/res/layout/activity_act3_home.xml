<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Act3_Home">

    <!-- Logo -->
    <LinearLayout
        android:layout_margin="8dp"
        android:id="@+id/act3HomeLogoLayoutTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/act3HomeLogoImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logo" />

        <TextView
            style="@style/LogoTxV"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/act3HomeLogoImageView"
             />

    </LinearLayout>




    <!-- Aquí va el cuerpo del activity -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act3HomeLogoLayoutTopBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/act3HomeRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                tools:listitem="@layout/rv_books"/>

            <TextView
                android:id="@+id/act3HomeTextview1"
                style="@style/TxvTitle1"
                android:layout_marginTop="15dp"
                android:text="@string/act3txv1"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/act3HomeRecyclerView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                tools:listitem="@layout/rv_books"/>

            <TextView
                android:id="@+id/act3HomeTextview2"
                style="@style/TxvTitle1"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toStartOf="parent"
                android:text="@string/act3txv2"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/act3HomeRecyclerView3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/rv_books"/>
        </LinearLayout>
    </ScrollView>

    <!-- Botón flotante -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/act3HomeBottonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search"
        android:backgroundTint="@color/primary2"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/act3HomeFooter"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Barra de navegación inferior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/act3HomeFooter"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/neutral3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/material_on_primary_disabled"
            android:weightSum="3">

            <ImageView
                android:id="@+id/IVBooks"
                style="@style/imageViewFooter" />

            <ImageView
                android:id="@+id/IVHome"
                style="@style/imageViewFooter"
                android:src="@drawable/ic_foot_home"
                app:tint="@color/primary1" />

            <ImageView
                android:id="@+id/IVSettings"
                style="@style/imageViewFooter"
                android:src="@drawable/ic_foot_settings" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>